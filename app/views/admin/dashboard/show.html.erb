<header class="page-header">
<h1 class="mb-4">Admin Dashboard</h1>
</header>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card text-center h-100">
      <div class="card-body">
        <h5 class="card-title">Total Products</h5>
        <p class="card-text display-4"><%= @products_count %></p>
        <a href="<%= admin_products_path %>" class="btn btn-success">View Products</a>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card text-center h-100">
      <div class="card-body">
        <h5 class="card-title">Total Categories</h5>
        <p class="card-text display-4"><%= @categories_count %></p>
        <a href="<%= admin_categories_path %>" class="btn btn-success">View Categories</a>
      </div>
    </div>
  </div>
</div>
